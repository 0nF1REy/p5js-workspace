---
import type { NavLink } from "../data/links";

interface Props {
  links: NavLink[];
}

const { links } = Astro.props;
---

<main class="viewport">
  <div class="wrapper">
    <header>
      <h1 class="title">p5.js</h1>
      <p class="subtitle">Execution Environment Selector</p>
    </header>

    <nav class="links">
      {
        links.map((link) => (
          <a class="card" href={link.url} target="_blank">
            <span>{link.label}</span>
          </a>
        ))
      }
    </nav>
  </div>

  <footer class="footer">workspace</footer>
</main>

<style lang="scss">
  .viewport {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;

    &::before {
      content: "";
      position: absolute;
      inset: 0;
      background:
        radial-gradient(
          circle at 20% 30%,
          rgba(76, 166, 184, 0.05),
          transparent 40%
        ),
        radial-gradient(
          circle at 80% 70%,
          rgba(76, 166, 184, 0.05),
          transparent 40%
        );
      pointer-events: none;
    }
  }

  .wrapper {
    text-align: center;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 4rem;
    width: 100%;
    max-width: 800px;
    padding: 2rem;
  }

  .title {
    font-family: "Orbitron", sans-serif;
    font-size: 3.5rem;
    font-weight: 900;
    letter-spacing: 8px;
    text-transform: uppercase;
    margin: 0 0 0.5rem 0;
    text-shadow: 0 0 20px rgba(76, 166, 184, 0.3);
  }

  .subtitle {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 4px;
    color: var(--gintama-cyan);
    font-weight: 700;
    opacity: 0.8;
  }

  .links {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  .card {
    flex: 1;
    max-width: 300px;
    height: 180px;
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 16px;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    backdrop-filter: blur(10px);

    span {
      font-family: "Orbitron", sans-serif;
      font-size: 1.2rem;
      font-weight: 900;
      letter-spacing: 3px;
      color: var(--gintama-silver);
      z-index: 2;
      transition: color 0.3s ease;
    }

    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(76, 166, 184, 0.1),
        transparent
      );
      transition: 0.5s;
    }

    &:hover {
      transform: translateY(-10px) scale(1.02);
      border-color: var(--gintama-cyan);
      background: rgba(76, 166, 184, 0.05);
      box-shadow:
        0 15px 35px rgba(0, 0, 0, 0.5),
        0 0 15px rgba(76, 166, 184, 0.2);

      span {
        color: var(--gintama-cyan);
      }
      &::before {
        left: 100%;
      }
    }
  }

  .footer {
    position: absolute;
    bottom: 40px;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: rgba(243, 244, 246, 0.3);
    font-weight: 700;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding-top: 20px;
    width: 200px;
    text-align: center;
  }
</style>
